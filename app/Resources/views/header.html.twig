            <li>
                <a href="{{ path('dream_new') }}">+ Додати мрію</a>
            </li>
        </ul><!-- /navigation -->
    </nav><!-- /nav -->
    <div id="sign-in">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {% set user = app.security.getToken().getUser() %}
            Вітаю, <a href="{{ path('profile_my_show') }}">{{ user.name }}</a> | notify = {{ user.notices | length }} | <a href="#">Мої мрії</a> <a href="{{ path('fos_user_security_logout') }}">Вийти</a>
        {% else %}
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}" class="social-sign-in">
                Фб
            </a>
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'vkontakte'}) }}" class="social-sign-in">
                Вк
            </a>
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'odnoklassniki'}) }}" class="social-sign-in">
                Ок
            </a>
        {% endif %}
    </div>
    <div id="search">
        <form>
            <input type="text">
            <button type="submit">Знайти</button>
        </form>
    </div>
</header><!-- /header -->

