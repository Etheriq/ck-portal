<header id="header" class="">
    <h1 id="logo" class="">
        <a href="{{ path('dream_homepage') }}">
            <img src="" alt="" />Chedream
        </a>
    </h1>
    <nav id="nav" class="">
        <ul id="navigation" class="">
            <li>
                <a href="{{ path('dream_dreams') }}">Мрії</a>
            </li>
            <li>
                <a href="{{ path('pages_faq') }}">FAQ</a>
            </li>
            <li>
                <a href="#">Контакти</a>
            </li>
            <li>
                <a href="#">Підписатись</a>
